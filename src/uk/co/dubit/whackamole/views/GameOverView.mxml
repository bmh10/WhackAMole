<?xml version="1.0" encoding="utf-8"?>
<views:GameOverViewBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
							xmlns:s="library://ns.adobe.com/flex/spark" 
							xmlns:mx="library://ns.adobe.com/flex/mx"
							xmlns:views="uk.co.dubit.whackamole.views.*"
							styleName="stretchToContainer">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:VGroup width="100%" height="100%" paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10">
		
		<s:BorderContainer styleName="roundedBorder" minHeight="0" minWidth="0" width="100%" height="40" >
			<s:Label styleName="titleLabel" text="GAMEOVER" horizontalCenter="0" verticalCenter="0"/>
			<s:backgroundFill>
				<s:SolidColor 
					color="red" 
					alpha="100"/>
			</s:backgroundFill>
		</s:BorderContainer>
		
		<s:BorderContainer styleName="roundedBorder" minHeight="0" minWidth="0" width="100%" height="100%" >
			<s:Label text="Score: {score}"
					 horizontalCenter="0" verticalCenter="0" width="60%" textAlign="center" />
			<s:Button id="startButton" click="onPlayAgainClick()" label="Play Again!" horizontalCenter="0" bottom="10"/>
		</s:BorderContainer>
		
	</s:VGroup>
	
</views:GameOverViewBase>